{
	email {env.CONTACT_EMAIL}
	#acme_ca https://acme-staging-v02.api.letsencrypt.org/directory
	dynamic_dns {
		provider cloudflare {env.CLOUDFLARE_API_TOKEN}
		domains {
			joaocosta.dev
		}
		versions ipv4 ipv6
	}
}

# -- public

joaocosta.dev {
	reverse_proxy php:8000
}

