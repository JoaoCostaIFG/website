server {
  listen 443 ssl;
  listen [::]:443 ssl;

  server_name radio.joaocosta.dev radio.localhost;

  location / {
    proxy_http_version 1.1;
    proxy_buffering off;
    proxy_request_buffering off;
    proxy_pass http://radio:9222;
    limit_except GET OPTIONS {
      deny all;
    }
  }
}

server {
  # redirect all http to https
  listen 80;
  listen [::]:80;

  server_name radio.joaocosta.dev radio.localhost;

  return 301 https://$host$request_uri;
}
