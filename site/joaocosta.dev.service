[Unit]
Description=joaocosta.dev container
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=true
WorkingDirectory=/usr/local/share/website/site
ExecStartPre=-mkdir -p /var/log/nginx
ExecStartPre=-mkdir -p /var/log/tor
ExecStartPre=-git pull
ExecStartPre=-git submodule update
ExecStartPre=-docker compose -f docker-compose.yml -f production.yml down
ExecStartPre=-docker volume rm site_app_code
ExecStart=docker compose -f docker-compose.yml -f production.yml up -d --remove-orphans --build 
ExecStop=docker compose down

[Install]
WantedBy=multi-user.target
