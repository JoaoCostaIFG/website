baseURL = "https://joaocosta.dev/"
languageCode = "en-us"
title = "JoaoCostaIFG personal website"

rssLimit = 10
theme = "terminal"
paginate = 5

[params]
  contentTypeName = "blog"
  themeColor = "green"
  showMenuItems = 3
  showLanguageSelector = false
  fullWidthTheme = true
  centerTheme = false
  favicon = "/favicon.png"

  # set all headings to their default size (depending on browser settings)
  # it's set to `true` by default
  # oneHeadingSize = false

[languages]
  [languages.en]
    languageName = "English"
    title = "JoaoCostaIFG"
    subtitle = "A simple blog"
    keywords = ""
    copyright = 'Joao Costa'
    menuMore = "Show more"
    readMore = "Read more"
    readOtherPosts = "Older posts"

    [languages.en.params.logo]
      logoText = "JoaoCostaIFG"
      logoHomeLink = "/"

    [languages.en.menu]
      [[languages.en.menu.main]]
        identifier = "about"
        name = "About me"
        url = "/about"
      [[languages.en.menu.main]]
        identifier = "github"
        name = "My Github"
        url = "https://github.com/JoaoCostaIFG"
      [[languages.en.menu.main]]
        identifier = "projs"
        name = "Projects"
        url = "/projs"
      [[languages.en.menu.main]]
        identifier = "rss"
        name = "RSS Feed"
        url = "https://joaocosta.dev/blog/index.xml"

[privacy]
  [privacy.disqus]
    disable = true
  [privacy.googleAnalytics]
    disable = true
  [privacy.instagram]
    disable = true
  [privacy.twitter]
    disable = true
  [privacy.vimeo]
    disable = true
  [privacy.youtube]
    disable = true
